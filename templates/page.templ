package templates

const (
    TREES int = iota
    DESCRIPTIONS
    REASONER 
    REGULATIONS 
    EXTRA_DATA
    REQUIREMENTS
    SCHEMAS
    CONFLICTS 
    TEST 
    ANALYSE
)

templ Page(title string, altView string, toggleBtnName string, active int, left, center, right func() templ.Component) {
    <!DOCTYPE html>
    <html>
    <head>
        @head(title)
    </head>
    <body class="page">
    <!-- Navbar -->
    <nav class="bg-green-800 p-4">
        <div class="container mx-auto flex justify-between">
            <div class="flex space-x-4">
                if active == TREES {
                    <a class="bg-emerald-200" href="/trees">Trees</a>
                } else {
                    <a class="text-white" href="/trees">Trees</a>
                }
                if active == DESCRIPTIONS {
                    <a class="bg-emerald-200" href="/descriptions">Descriptions</a>
                } else {
                    <a class="text-white" href="/descriptions">Descriptions</a>
                }
                if active == REASONER {
                    <a class="bg-emerald-200" href="/reasoner">Reasoner</a>
                } else {
                    <a class="text-white" href="/reasoner">Reasoner</a>
                }
                if active == REGULATIONS {
                    <a class="bg-emerald-200" href="/regulations">Regulations</a>
                } else {
                    <a class="text-white" href="/regulations">Regulations</a>
                }
                if active == EXTRA_DATA {
                    <a class="bg-emerald-200" href="/extra-data">Extra data</a>
                } else {
                    <a class="text-white" href="/extra-data">Extra data</a>
                }
                if active == REQUIREMENTS {
                    <a class="bg-emerald-200" href="/requirements">Requirements</a>
                } else {
                    <a class="text-white" href="/requirements">Requirements</a>
                }
                if active == SCHEMAS {
                    <a class="bg-emerald-200" href="/schemas">Schemas</a>
                } else {
                    <a class="text-white" href="/schemas">Schemas</a>
                }
                if active == CONFLICTS {
                    <a class="bg-emerald-200" href="/conflicts">Push</a>
                } else {
                    <a class="text-white" href="/conflicts">Push</a>
                }
            </div>
            <div class="flex space-x-4">
                <a id="toggleView" class="text-white" href="#">{toggleBtnName}</a>
                <a id="save-btn" class="text-white" href="#">Save</a>
                if active == TEST {
                    <a id="test-btn" class="bg-emerald-200" href="/test">Test</a>
                } else {
                    <a id="test-btn" class="text-white" href="/test">Test</a>
                }
                if active == ANALYSE {
                    <a id="analyse-btn" class="bg-emerald-200" href="/analyse">Analyse</a>
                } else {
                    <a id="analyse-btn" class="text-white" href="/analyse">Analyse</a>
                }
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="panel-container">
        <!-- Left Panel -->
        <div class="side-bar" style="width: 15%;">
            if left != nil {
                @left()
            }
        </div>
        
        <!-- Center Panel -->
        <div class="center-container" style="width: 70%;">
            if center != nil {
                @center()
            }
        </div>
        
        <!-- Right Panel -->
        <div class="side-bar" style="width: 15%;">
            if right != nil {
                @right()
            }
        </div>
    </div>
   
    @toggleButton(altView, toggleBtnName)
    </body>
    </html>
}

script toggleButton(altView string, toggleBtnName string) {
    const toggleButton = document.getElementById('toggleView');
    let isEditorVisible = true;

    if (altView === "") {
        toggleButton.style.display = 'none';
    }

    toggleButton.addEventListener('click', function() {
        // console.log(window.editor.getValue())

        if (altView === "") {
            return
        }

        console.log(`TT ${document.getElementById(altView)}`)

        if (isEditorVisible) {
            document.getElementById('editorContainer').style.display = 'none';
            document.getElementById(altView).style.display = 'block';
            if (window.network !== undefined) {
                window.network.redraw();
                window.network.fit();
            }
            toggleButton.textContent = 'Editor';
        } else {
            document.getElementById('editorContainer').style.display = 'block';
            document.getElementById(altView).style.display = 'none';
            toggleButton.textContent = toggleBtnName;
        }
        isEditorVisible = !isEditorVisible;
    });

    // Show editor by default
    edCont = document.getElementById('editorContainer')
    
    if (edCont !== null) {
        document.getElementById('editorContainer').style.display = 'block';
        const alt = document.getElementById(altView)
        if (alt != null) {
            alt.style.display = 'none';
        }
        toggleButton.textContent = toggleBtnName;
    }
}

