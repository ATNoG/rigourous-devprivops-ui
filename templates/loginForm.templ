package templates

templ LoginForm() {
	<form action="/login">
        <label for="username">User name</label>
        <input id="username" type={string(TEXT)} name="username"/>
        <br/>

        <label for="email">E-mail</label>
        <input id="email" type={string(TEXT)} name="email"/>
        <br/>

        <input type="submit" value="Login"/>
	</form>
}